# ================================
# PRODUCTION ENVIRONMENT TEMPLATE
# Telegram Channel Finder Bot
# ================================

# ============ ENVIRONMENT ============
ENVIRONMENT=production

# ============ TELEGRAM BOT API ============
# Получить на https://t.me/BotFather
BOT_TOKEN=your_bot_token_here

# ============ TELEGRAM API CREDENTIALS ============
# Получить на https://my.telegram.org
API_ID=your_api_id
API_HASH=your_api_hash

# ============ DATABASE ============
# PostgreSQL (обязательно!)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# ============ ADMIN SETTINGS ============
# Telegram User ID администратора
ADMIN_USER_ID=your_admin_user_id

# ============ SUBSCRIPTION SETTINGS ============
# Цена подписки в рублях
SUBSCRIPTION_PRICE=349
# Количество бесплатных запросов
FREE_REQUESTS_LIMIT=3

# ============ TELETHON SESSION ============
SESSION_NAME=bot_session
# String session (приоритет над SESSION_NAME)
# Получить через: python generate_session.py
SESSION_STRING=your_session_string_here

# ============ ADMIN PANEL SETTINGS (PRODUCTION) ============
ADMIN_SECRET_KEY=your-super-secret-admin-key-change-in-production
ADMIN_PORT=8080
ADMIN_HOST=0.0.0.0
ADMIN_DEBUG=False
ADMIN_ALLOWED_HOSTS=your-domain.com,your-ip-address
ADMIN_CORS_ORIGINS=https://your-domain.com
ADMIN_BASE_URL=https://your-domain.com

# ============ JWT SETTINGS (PRODUCTION) ============
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ BROADCAST SETTINGS ============
BROADCAST_RATE_LIMIT=30
BROADCAST_BATCH_SIZE=100
BROADCAST_RETRY_ATTEMPTS=3

# ============ YOOKASSA SETTINGS ============
# Тестовый токен (для разработки)
YOOKASSA_TEST_TOKEN=your_test_token_here
# Продакшн токен (для production)
YOOKASSA_LIVE_TOKEN=your_live_token_here
# Режим работы: TEST или LIVE
YOOKASSA_MODE=LIVE
# Валюта платежей (ISO 4217)
YOOKASSA_CURRENCY=RUB
# Описание товара для чека
YOOKASSA_PRODUCT_DESCRIPTION=Подписка Channel Finder Bot на месяц
# НДС код (1 - без НДС для самозанятых)
YOOKASSA_VAT_CODE=1

# ============ PRODUCTION SETTINGS ============
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
ADMIN_LOG_LEVEL=INFO
ADMIN_LOG_FILE=admin.log
# Домен для webhook'ов
WEBHOOK_DOMAIN=your-domain.com
# Секретный ключ для webhook'ов ЮKassa
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret_here
# Дополнительные настройки ЮKassa для API
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://your-domain.com

# ============ SECURITY SETTINGS ============
# Настройки безопасности для продакшн
SKIP_SSL_VERIFY=False
ENABLE_DEBUG_ROUTES=False
MOCK_PAYMENTS=False
